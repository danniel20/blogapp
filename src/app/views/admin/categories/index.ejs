<h2>Lista de Categorias</h2>
<hr />
<a href="/admin/categories/new" class="btn btn-success">Nova Categoria</a>

<%if(categories.length == 0){ %>
  <h4 class="mt-3">Nenhuma categoria registrada!</h4>
<% } %>

<%for(category of categories){%>
  <div class="card mt-4">
    <div class="card-body">
      <h4><%=category.name%></h4>
      <small>Label: <%=category.label%></small> <br />
      <small>Data de criação: <%=new Date(category.createdAt).toISOString().substr(0, 10).split('-').reverse().join('/')%></small> <br />
      <a href="/admin/categories/edit/<%=category._id%>" class="btn btn-sm btn-primary mt-4">Editar</a>
      <form action="/admin/categories?_method=DELETE" method="POST" style="display: inline;">
        <input type="hidden" name="id" value="<%=category._id%>">
        <button type="submit" class="btn btn-sm btn-danger mt-4">Deletar</button>
      </form>
    </div>
  </div>
<% } %>
