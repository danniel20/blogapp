<h3 class="text-center">Nova Categoria</h3>

<%for(error of errors){ %>
  <div class="row justify-content-center">
    <div class="alert alert-danger"><%=error.text%></div>
  </div>
<%}%>

<form action="/admin/categories" method="POST">

  <div class="row justify-content-center">
    <div class="form-group col-6">
      <label for="name">Nome</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Nome da categoria">
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="form-group col-6">
      <div class="form-group">
        <label for="label">Label</label>
        <input type="text" class="form-control" id="label" name="label" placeholder="Label da categoria">
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="form-group col-6">
      <button type="submit" class="btn btn-success">Criar categoria</button>
    </div>
  </div>

</form>
